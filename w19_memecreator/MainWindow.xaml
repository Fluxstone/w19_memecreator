<Window x:Class="w19_memecreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:w19_memecreator"
        mc:Ignorable="d"
        Title="Meme Creator" Height="650" Width="1000" ResizeMode="NoResize">
    <Grid x:Name="grid_mainGrid">

        <StackPanel x:Name="stackP_Timeline" HorizontalAlignment="Left" Height="100" Margin="10,56,0,0" VerticalAlignment="Top" Width="974"/>

        <Border BorderThickness="2" BorderBrush="Black" Height="450" Width="620" Margin="10,161,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Canvas x:Name="canvas_Bearbeitungsfenster" HorizontalAlignment="Left" Height="450" Margin="-2" VerticalAlignment="Top" Width="620"/>
        </Border>

        <Border x:Name="border_Kontextfenster" BorderThickness="2" BorderBrush="Black" Height="450" Width="344" Margin="636,161,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <ScrollViewer>
                <Grid x:Name="grid_KontextFenster" ScrollViewer.CanContentScroll="True" Height="563">
                    <Button x:Name="btn_DEBUG_Control1" Content="Draw" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btn_DEBUG_Control1_Click" Margin="10,10,0,0"/>
                    <Button x:Name="btn_DEBUG_Control2" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btn_DEBUG_Control2_Click" Margin="10,416,0,0"/>
                    <TextBox HorizontalAlignment="Left" Height="248" Margin="174,300,0,-102" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </ScrollViewer>
        </Border>

        <Menu x:Name="menu_mainMenu" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="364">
            <MenuItem Header="File">
                <MenuItem Header="Load"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <Separator Margin="3,2,-3,2"></Separator>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Create">
                    <MenuItem Header="Template"></MenuItem>
                </MenuItem>
            </MenuItem>
        </Menu>


    </Grid>
</Window>
