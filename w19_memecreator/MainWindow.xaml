<Window x:Class="w19_memecreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:w19_memecreator"
        mc:Ignorable="d"
        Title="Meme Creator" Height="650" Width="1000" ResizeMode="NoResize">
    <Grid>

        <Label x:Name="TemplatesLabel" Content="Templates" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Background="#232323" Foreground="#828282"/>
        <StackPanel x:Name="stackP_Timeline" Orientation="Horizontal" HorizontalAlignment="Left" Height="100" Margin="10,56,0,0" VerticalAlignment="Top" Width="974" Background="#232323" />


        <Border Background="#232323" Height="437" Width="607" Margin="10,173,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Canvas x:Name="canvas_Bearbeitungsfenster" HorizontalAlignment="Left" Height="445" Width="607" Margin="0,0,0,0" VerticalAlignment="Top"/>
        </Border>

        <!-- Kontextfenster Design -->
        <ScrollViewer Margin="636,173,14,10" Background="#232323" >
            <Grid x:Name="grid_Kontextfenster" Margin="0,0,0,0" ScrollViewer.CanContentScroll="True">

            </Grid>
        </ScrollViewer>

        <StackPanel x:Name="stackP_Kontext" Orientation="Horizontal" HorizontalAlignment="Left" Height="437" VerticalAlignment="Top" Width="344" Margin="636,173,0,0" Background="#232323" />

        <Menu x:Name="menu_mainMenu" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="116">
            <MenuItem Header="File">
                <MenuItem Header="Load"></MenuItem>
                <MenuItem Header="Save" Click="saveImage"></MenuItem>
                <Separator Margin="3,2,-3,2"></Separator>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Create">
                    <MenuItem Header="Template"></MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Effects">
                <MenuItem Header="Add Sprite" Click="addSprite_Click"></MenuItem>
                <MenuItem Header="Add Filter">
                    <MenuItem Header="Film Grain"></MenuItem>
                    <MenuItem Header="Sharpen"></MenuItem>
                    <MenuItem Header="Black and White"></MenuItem>
                    <MenuItem Header="Color Saturation"></MenuItem>
                </MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
