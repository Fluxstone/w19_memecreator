<Window x:Class="w19_memecreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:w19_memecreator"
        mc:Ignorable="d"
        Title="Meme Creator" Height="650" Width="1000" ResizeMode="NoResize">
    <Grid>

        <Label x:Name="TemplatesLabel" Content="Templates" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
        <StackPanel x:Name="stackP_Timeline" Orientation="Horizontal" HorizontalAlignment="Left" Height="100" Margin="10,56,0,0" VerticalAlignment="Top" Width="974" />


        <Border BorderThickness="2" BorderBrush="Black" Height="450" Width="600" Margin="10,160,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Canvas x:Name="canvas_Bearbeitungsfenster" Background="White" HorizontalAlignment="Left" Height="445" Width="595" Margin="0,0,0,0" VerticalAlignment="Top"/>
        </Border>

        <!-- Kontextfenster Design -->
        <Border x:Name="border_KontextFenster" BorderThickness="2" BorderBrush="Black" Height="450" Width="344" Margin="636,161,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <ScrollViewer>
                <Grid x:Name="grid_Kontextfenster" ScrollViewer.CanContentScroll="True">

                </Grid>
            </ScrollViewer>
          
          <Border BorderThickness="2" BorderBrush="Black" Height="450" Width="344" Margin="636,161,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <StackPanel x:Name="stackP_Kontext" Orientation="Horizontal" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="344" />
        </Border>

        <Menu x:Name="menu_mainMenu" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="364">
            <MenuItem Header="File">
                <MenuItem Header="Load"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <Separator Margin="3,2,-3,2"></Separator>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Create">
                    <MenuItem Header="Template"></MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Effects">
                <MenuItem Header="Add Sprite" Click="addSprite_Click"></MenuItem>
                <MenuItem Header="Add Filter">
                    <MenuItem Header="Film Grain"></MenuItem>
                    <MenuItem Header="Sharpen"></MenuItem>
                    <MenuItem Header="Black and White"></MenuItem>
                    <MenuItem Header="Color Saturation"></MenuItem>
                </MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
